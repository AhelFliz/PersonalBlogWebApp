<div class="general-div">
  <h2>Login</h2>

  <%= form_with url: "/login", method: :post do |f|%>
    <div>
      <%= f.text_field :username, placeholder: "username", class: "little-text-field" %>
    </div>

    <div>
      <%= f.password_field :password, placeholder: "password", class: "little-text-field" %>
    </div>

    <div style="margin: 10px;">
      <%= f.submit :login  %>
    </div>
  <% end %>
</div>